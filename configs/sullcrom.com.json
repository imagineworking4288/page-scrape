{
  "comment": "Sullivan & Cromwell LLP - Law firm with infinite scroll lawyer directory",
  "domain": "sullcrom.com",
  "name": "Sullivan & Cromwell LLP",
  "baseUrl": "https://www.sullcrom.com/lawyers",
  "testUrl": "https://www.sullcrom.com/LawyerListing?custom_is_office=27567",
  "selectors": {
    "container": ".attorney-card, [class*=\"attorney\"], .lawyer-card, [class*=\"lawyer-listing\"], .person-card",
    "name": "h3, h2, .name, [class*=\"name\"], .attorney-name",
    "email": "a[href^='mailto:'], a:contains('Email')",
    "phone": "a[href^='tel:']",
    "profileLink": "a[href*='/lawyer/'], a[href*='/Lawyers/']"
  },
  "infiniteScroll": {
    "enabled": true,
    "scrollDelay": 2000,
    "maxScrollAttempts": 50,
    "noNewContentThreshold": 3,
    "scrollStrategy": "viewport",
    "networkIdleTimeout": 5000,
    "extractionMethod": "profile-only",
    "minCardIncrement": 1,
    "comment": "Profile-only mode: emails are ONLY on profile pages, not on listing. Extract names+URLs, then visit profiles."
  },
  "profileVisiting": {
    "enabled": true,
    "navigationTimeout": 30000,
    "extractionDelay": 1500,
    "maxRetries": 2,
    "retryDelay": 2000,
    "skipIfEmailExists": true,
    "matchByName": true,
    "nameSimilarityThreshold": 0.7,
    "comment": "Visit profile pages for lawyers missing emails. Email is in mailto: on profile page."
  },
  "fallback": {
    "enabled": true,
    "methods": ["select", "pdf"],
    "completenessThreshold": 0.3
  },
  "extraction": {
    "method": "universal",
    "strategies": {
      "email": ["email-link-text", "mailto", "text", "data-attr"],
      "phone": ["tel", "text"],
      "name": ["heading", "class", "profile-link"]
    },
    "comment": "Universal extraction handles 'Email' text links with mailto: hrefs"
  },
  "pagination": {
    "enabled": false,
    "type": "infinite-scroll",
    "comment": "This site uses infinite scroll instead of traditional pagination"
  },
  "parsing": {
    "emailDomain": "sullcrom.com",
    "nameBeforeEmail": true,
    "filterPersonalEmails": true,
    "proximityWindow": 200,
    "profileUrlPatterns": ["/Lawyers/", "/lawyer/", "/attorneys/", "/people/"]
  },
  "validation": {
    "requireEmail": true,
    "requireName": false,
    "minConfidence": "low",
    "filterBusinessEmailsOnly": true
  }
}
